{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug C++ (GDB)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/app_cpp",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "console": "integratedTerminal",
      "externalConsole": false,
      "preLaunchTask": "Build C++",
      "setupCommands": [
        { "text": "-enable-pretty-printing", "ignoreFailures": true },
        { "text": "set debuginfod enabled off" },
        { "text": "set stop-on-solib-events 0" }
      ]
    }
  ]
}
